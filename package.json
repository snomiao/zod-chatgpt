{
  "name": "@snomiao/zod-chatgpt",
  "version": "1.0.7",
  "license": "MIT",
  "author": "snomiao <snomiao@gmail.com>, @olup <https://github.com/olup/>",
  "exports": {
    "import": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "*.ts",
    "dist"
  ],
  "scripts": {
    "build": "bun build:type && bun build:js && bun build:umd",
    "build:js": "bun build . --bundle --platform=node --outdir=dist",
    "build:type": "tsc -d --noEmit false --emitDeclarationOnly --outDir dist",
    "build:umd": "bunx rollup dist/index.js --file dist/index.umd.js --format umd --name zodChatGPT",
    "prerelease": "bun run build && bun run test",
    "release": "bunx standard-version && git push --follow-tags && npm publish",
    "start": "yarn tsx src/main.ts",
    "test": "bun test"
  },
  "dependencies": {
    "openai": "^3.3.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.43",
    "tsx": "^3.14.0",
    "typescript": "^5.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
