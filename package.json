{
  "name": "@snomiao/zod-chatgpt",
  "version": "1.0.3",
  "license": "MIT",
  "author": "snomiao <snomiao@gmail.com>, @olup <https://github.com/olup/>",
  "exports": {
    "import": "./dist/index.js",
    "types": "./index.ts"
  },
  "main": "index.ts",
  "module": "index.ts",
  "types": "./index.ts",
  "files": [
    "*.ts",
    "dist"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir=dist && bun build:umd",
    "build:umd": "bunx rollup dist/index.js --file dist/index.umd.js --format umd --name zodChatGPT",
    "prerelease": "bun run build && bun run test",
    "release": "bunx standard-version && git push --follow-tags && npm publish",
    "start": "yarn tsx src/main.ts",
    "test": "bun test"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "openai": "^3.2.1",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.20.4"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.15.11",
    "tsx": "^3.12.6",
    "typescript": "^5.5.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
